# Development Dockerfile for Backend
FROM node:18-alpine

WORKDIR /app

# Install dependencies
COPY package*.json ./
COPY prisma ./prisma/
RUN npm ci

# Copy source code
COPY . .

# Generate Prisma client
RUN npx prisma generate

EXPOSE 3001

# Install nodemon globally for development
RUN npm install -g nodemon

CMD ["npm", "run", "dev"]
